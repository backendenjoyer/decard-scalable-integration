# 🐳 Docker Compose Environment Variables
# Скопируйте в .env и настройте для вашего окружения

# 💾 Database Configuration
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=gatedb
DATABASE_URL=postgresql://user:password@db:5432/gatedb

# 📨 Kafka Configuration
KAFKA_BROKER=kafka:9092

# 🔐 DeCard API Configuration (основные настройки)
DECARD_API_URL=https://decard.me

# 🔗 Service URLs
DECARD_WEBHOOK_URL=http://webhook-worker:3001/webhook/decard
PAYMENT_SUCCESS_URL=http://localhost/payment/success
PAYMENT_FAIL_URL=http://localhost/payment/fail

# ⚙️ Environment
NODE_ENV=development
